<script type="text/javascript">   
function dosearch(){
	var kwds={'terms':document.getElementById("kwds"),co:null,loc:'Glasgow',lim:20,sb:0,rf:1000};
	localStorage.getItem('kwds');
	localStorage.setItem('kwds',kwds);
	window.location.replace("./results.html");
}
